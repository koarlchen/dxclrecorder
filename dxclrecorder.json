{
    "connection": {
        "servers": [
            { "callsign": "INVALID", "hostname": "example.com", "port": 1234 }
        ],
        "reconnect": true,
        "retries": 10,
        "backoff": 30
    },
    "output": {
        "console": true,
        "file": {
            "enabled": false,
            "rotate": true,
            "compress": true,
            "filename": "./out/data_{DATE}.json"
        }
    },
    "logging": {
        "console": true,
        "file": {
            "enabled": false,
            "filename": "./out/recorder.log"
        }
    },
    "filter": {
        "type": {
            "dx": true,
            "wcy": true,
            "wx": false,
            "wwv": false,
            "toall": false,
            "tolocal": false
        },
        "band": [
            "160m",
            "80m",
            "40m",
            "30m",
            "20m",
            "17m",
            "15m",
            "12m",
            "10m",
            "6m"
        ]
    }
}